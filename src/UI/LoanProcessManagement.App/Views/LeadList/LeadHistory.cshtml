@model IEnumerable<LoanProcessManagement.Application.Features.LeadList.Query.LeadHistory.LeadHistoryQueryVm>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "LeadHistory";
}
<div class="container app">
    <div class="col-sm-12">
        <div data-effect="helix" id="panels" class="panel panel-info effect-helix in" style="transition: all 0.7s ease-in-out 0s;">
            <div class="panel-heading">History</div>
            <div class="panel-body">
            </div>
            <div id="alertMsg" visible="false" runat="server">
                <asp:Label ID="lblAlert" runat="server" Style="color: red"></asp:Label>
                <div style="margin-bottom: 10px"></div>
            </div>
            <div class=" card">
                <div class="card">
                    <table id="History" class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Stage)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.StartDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EndDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UpdatedBy)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ReasonForReject)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ProductsSold)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Stage)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StartDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EndDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UpdatedBy)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ReasonForReject)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductsSold)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        @*<partial name="_Tabs" />*@
    <div class="d-flex flex-row justify-content-around">
        <a class="btn btn-primary btn1 selected" asp-controller="LeadList" asp-action="LeadSummary">Summary</a>
        <a class="btn btn-primary btn1" asp-controller="LeadList" asp-action="LeadModification" target="_blank">Modification</a>
        <a class="btn btn-primary btn1" asp-controller="LeadList" asp-action="LeadHistory" target="_blank">History</a>
        <a class="btn btn-primary btn1" href="/QueryHistory/Index?lead_Id=@ViewBag.lead_Id">Query History</a>
        <a class="btn btn-primary btn1" asp-controller="ProductsList" asp-action="AllProductsList" target="_blank">Products</a>
        <a class="btn btn-primary btn1" asp-controller="Login" asp-action="UpdatePropertyDetails" target="_blank">Property Details</a>

    </div>

        @*<ul class="tabs">
            <li class="active"><a href="#" id="tabDetails" class="">Summary</a></li>

            <li><a href="#" id="tabProcess" class="">Modification</a></li>

            <li><a href="#LeadHistory" id="tabFeed" class="selected">History</a></li>

            <li><a href="#" id="tabQueryStatus" class="">Query History</a></li>

            <li><a href="#" id="tabProduct" class="">Products</a></li>

            <li id="ContentPlaceHolder1_tab_PropPincode"><a href="#Property_Pincode" id="btn_Property_Pincode">Property Details</a></li>
        </ul>*@
    </div>
</div>
<script>
    $(document).ready(function () {
        var usrTable = $('#History').dataTable({
            "oLanguage": {
                "sZeroRecords": "No Records to Display",
                "sSearch": "Search "
            },
            "iDisplayLength": 15,
            "aLengthMenu": [[25, 50, 100, 200, 500], [25, 50, 100, 200, 500]],
            "bSortClasses": false,
            "bPaginate": true,
            "bAutoWidth": false,
            "bProcessing": true,
            "bDestroy": true
        });
        $('.btn1').click(function (e) {
            $('.btn1').removeClass("selected");
            $(e.target).addClass("selected");
        });

    });

</script>