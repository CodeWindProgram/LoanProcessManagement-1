@model IEnumerable<LoanProcessManagement.Application.Features.CreditIncomeDetails.Queries.GetIncomeDetailsVm>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "IncomeDetailsList";
}
<style>
    .panel-heading {
        color: white;
        background-color: #343a40;
        border-bottom: 1px solid rgba(0,0,0,.125);
        padding: 0.75rem 1.25rem;
        position: relative;
        border-top-left-radius: 0.25rem;
        border-top-right-radius: 0.25rem;
    }
    .btn:hover {
        background-color: #adb5bd;
        color: black;
        margin-bottom: 5px;
    }
    .selected {
        background: #adb5bd;
        color: #FFF;
    }
    .no-sort::after {
        display: none !important;
    }
    .no-sort {
        pointer-events: none !important;
        cursor: default !important;
    }
</style>
<div class="container app pb-5">
    <div class="col-sm-12">
        <div data-effect="helix" id="panels" class="panel panel-info effect-helix in" style="transition: all 0.7s ease-in-out 0s;">
            <div class="panel-heading"><h5>Credit Report</h5></div>
            <div class="panel-body">
                <div id="alertMsg" visible="false" runat="server">
                    <asp:Label ID="lblAlert" runat="server" Style="color: red"></asp:Label>
                </div>
                <div class="card" style="padding:15px;">
                    <div>
                        <div class="row">
                            <div class="col-3">
                                <br>
                                <label>Select Report</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-5">
                                    <div id="divBranch" class="input-control text">
                                        <select id="enquiryVal" class="form-control">
                                            <option value="cibil" id="cibil">Cibil Enquiry Details</option>
                                            <option value="gst" id="gst">GST Enquiry Details</option>
                                            <option value="itr" id="itr">ITR Enquiry Details</option>
                                            <option value="inc" id="inc" selected>Income Enquiry Details</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-3">
                                    <input type="button" class="btn btn-dark  btn-md" @*onclick="myfun()"*@ value="Submit" id="btnSubmit">
                                </div>
                            </div>
                        </div>
                    </div>
                    <table id="IncomeDetailsList" class="display table-responsive-lg">
                        <thead>
                            <tr>
                                <th>
                                    FormNo.
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    ContactNo.
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EmploymentType)
                                </th>
                                <th>
                                    Enquiry Date
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.ActionLink(item.FormNo, "userIncomeDetailsByFormNo", @*"CreditDetails",*@new { FormNo = item.FormNo })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CustomerName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EmailId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MobileNumber)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.EmploymentType)
                                    </td>
                                    <td>
                                        @{var date = item.StartDate.ToString().Split(" ");
                                        }
                                        @date[0]
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {

        var usrTable = $('#IncomeDetailsList').dataTable({
            "oLanguage": {
                "sZeroRecords": "No Records to Display",
                "sSearch": "Search "
            },
            "iDisplayLength": 10,
            "aLengthMenu": [[10, 50, 100, 200, 500], [10, 50, 100, 200, 500]],
            "bSortClasses": false,
            "bPaginate": true,
            "bAutoWidth": false,
            "bProcessing": true,
            "bDestroy": true
        });
    });

    $(document).ready(function () {
        $("#btnSubmit").click(function () {
            if ($("#enquiryVal").val() == "itr") {
                setTimeout(function () {
                    location.href = "/CreditITRDetailsList";
                }, 500);
            }
            if ($("#enquiryVal").val() == "cibil") {
                setTimeout(function () {
                    location.href = "/CreditCibilDetailsList";
                }, 500);
            }
            if ($("#enquiryVal").val() == "gst") {
                setTimeout(function () {
                    location.href = "/CreditGstDetailsList";
                }, 500);
            }
            if ($("#enquiryVal").val() == "inc") {
                setTimeout(function () {
                    location.href = "/IncomeDetailsList";
                }, 500);
            }
        });
    });
</script>
