@model LoanProcessManagement.App.Models.CreateUserCommandVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "UpdateUser";
}
<style>
    .form-group {
        display: flex;
    }

    label {
        display: inline-block;
        margin-bottom: 5px;
        font-weight: bold;
        width: 15%;
    }

    .form-signin-heading {
        color: white;
        background-color: darkblue;
        padding: 5px;
        margin-bottom: 18px;
    }
</style>

<div class="container">
    <div class="form-signin well well-lg">
        <h2 class="form-signin-heading text-center">Edit User</h2>
        @if (ViewBag.isSuccess == true)
        {
            <div class="alert alert-success" role="alert">
                <strong>Well done!</strong> @ViewBag.Message
            </div>
        }
        else if (ViewBag.isSuccess == false)
        {
            <div class="alert alert-danger" role="alert">
                <strong>Error!</strong> @ViewBag.Message
            </div>

        }
        <form method="post" action="/login/updateuser">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <input type="hidden" asp-for="LgId" />
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <input asp-for="EmployeeId" class="form-control" id="txtEmpId" type="text" placeholder="Login Id" autofocus />
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserRoleId" class="control-label"></label>
                <select asp-for="UserRoleId" class="form-control" asp-items="ViewBag.roles">
                    <option value="">Select Role</option>
                </select>
                <span asp-validation-for="UserRoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BranchId" class="control-label"></label>
                <select asp-for="BranchId" class="form-control" asp-items="ViewBag.branches">
                    <option value="">Select Branch</option>
                </select>
                <span asp-validation-for="BranchId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" id="txtName" type="text" placeholder="Name" autofocus />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" id="txtEmail" type="email" placeholder="Email" autofocus />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" id="txtPhonenNumber" type="number" placeholder="Phone No" autofocus />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <input type="submit" value="Save" id="btnSignIn" Class="btn btn-primary" />

        </form>

    </div>
</div>



