<div class="container app">
    <div class="col-sm-12 col-lg-12">
        <div data-effect="helix" id="panels" class="panel panel-info effect-helix in">
            <div class="panel-heading">
                <h5>Modify User</h5>
            </div>
            <div class="panel-body">
                <div style="border: 1px solid #343a40;padding-right:5px;padding-bottom:5px;" class="border">
                    <div class="border-part">
                        @*@if (ViewBag.isSuccess == true)
                            {
                                <div class="alert alert-success" role="alert">
                                    @ViewBag.Message
                                </div>
                            }
                            else if (ViewBag.isSuccess == false)
                            {
                                <div class="alert alert-danger" role="alert">
                                    <strong>Error!</strong> @ViewBag.Message
                                </div>

                            }*@
                        <form action="/login/updateuser" method="post">
                            <br />
                            @*<div asp-validation-summary="ModelOnly" class="text-danger font-italic"></div>*@
                            <div class="form-group" style="text-align:end"><label><span style="color: Red">&nbsp;All * marked fields are mandatory</span></label></div>
                            <input type="hidden" asp-for="LgId" />
                            <div class="form-group ml-lg-2">
                                <div class="row">
                                    <div class="col-lg-4 col-sm-12">
                                        <label asp-for="EmployeeId" >Username:<span style="color: Red">&nbsp;*</span></label>
                                        <input asp-for="EmployeeId" class="form-control" type="text" placeholder="Login Id" autofocus />
                                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-4 col-sm-12">
                                        <label asp-for="UserRoleId" >User Role:<span style="color: Red">&nbsp;*</span></label>

                                        <select asp-for="UserRoleId" class="form-control" asp-items="ViewBag.roles">
                                            <option value="">Select Role</option>
                                        </select>
                                        <span asp-validation-for="UserRoleId" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-4 col-sm-12">
                                    <label asp-for="BranchId" >Branch Name:<span style="color: Red">&nbsp;*</span></label>
                                        <select asp-for="BranchId" class="form-control" asp-items="ViewBag.branches">
                                            <option value="">Select Branch</option>
                                        </select>
                                        <span asp-validation-for="BranchId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group ml-lg-2">
                                <div class="row">
                                    <div class="col-lg-4 col-sm-12">
                                        <label asp-for="Name">Name<span style="color: Red">&nbsp;*</span></label>
                                        <input asp-for="Name" onkeydown="return /[a-z_ ]/i.test(event.key)" class="form-control" type="text" placeholder="Name" autofocus />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-4 col-sm-12">
                                        <label asp-for="Email" >E-Mail<span style="color: Red">&nbsp;*</span></label>
                                        <input asp-for="Email" class="form-control" type="email" placeholder="Email" autofocus />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-4 col-sm-12">
                                        <label asp-for="PhoneNumber">Phone Number<span style="color: Red">&nbsp;*</span></label>
                                        <input asp-for="PhoneNumber" class="form-control" type="number" placeholder="Phone number" autofocus />
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                
                            </div>
                            <div class="form-group row ml-lg-1">
                                <div class="col-sm-4"></div>
                                <div class="col-sm-5">
                                    <input type="submit" value="Modify User" id="btnSignIn" Class="btn btn-dark" />
                                    <a id="cancelbutton" class="btn btn-danger" href="/UserList/Index">Cancel</a>
                                    @if (Model != null)
                                    {
                                    <a id="cancelbutton" class="btn btn-primary" asp-controller="Login" asp-action="ResetPassword" 
                                       asp-route-lg_id="@Model.LgId">Reset Password</a>
                                    }
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {


        if ('@TempData["UpdateSuccess"]' == 'True') {
            toastr.success('@TempData["UpdateMessage"]', "Success");

        }
        else if ('@TempData["UpdateSuccess"]' == 'False') {
            toastr.error('@TempData["UpdateMessage"]', "Error");

        }


        var resetSuccess = '@TempData["Success"]';
        if (resetSuccess == 'True') {
            toastr.success('@TempData["Message"]', "Success");

        }
        else if (resetSuccess == 'False') {
            toastr.error('@TempData["Message"]', "Error");

        }




    })
</script>