@model LoanProcessManagement.App.Models.CreateUserCommandVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Modify User";
}
<style>
    .row {
        margin-left: 5px;
        margin-right: 5px;
    }

    #btnSignIn {
        margin-left: 5px;
    }
</style>

<div class="container app">
    <div class="col-sm-12 col-lg-12">
        <div data-effect="helix" id="panels" class="panel panel-info effect-helix in">
            <div class="panel-heading">
                Modify User
            </div>
            <div class="panel-body">
                <div class="border-part">
                    @if (ViewBag.isSuccess == true)
                    {
                        <div class="alert alert-success" role="alert">
                            <strong>Well done!</strong> @ViewBag.Message <a asp-controller="userlist" asp-action="index">Check user list</a>
                        </div>
                    }
                    else if (ViewBag.isSuccess == false)
                    {
                        <div class="alert alert-danger" role="alert">
                            <strong>Error!</strong> @ViewBag.Message
                        </div>

                    }
                <form action="/login/updateuser" method="post">
                    @*<div asp-validation-summary="ModelOnly" class="text-danger font-italic"></div>*@
                    <input type="hidden" asp-for="LgId" />
                    <div class="form-group row">
                        <label asp-for="EmployeeId" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="EmployeeId" class="form-control" type="text" placeholder="Login Id" autofocus />
                            <span asp-validation-for="EmployeeId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="UserRoleId" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <select asp-for="UserRoleId" class="form-control" asp-items="ViewBag.roles">
                                <option value="">Select Role</option>
                            </select>
                            <span asp-validation-for="UserRoleId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="BranchId" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <select asp-for="BranchId" class="form-control" asp-items="ViewBag.branches">
                                <option value="">Select Branch</option>
                            </select>
                            <span asp-validation-for="BranchId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Name" class="form-control" type="text" placeholder="Name" autofocus />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Email" class="form-control" type="email" placeholder="Email" autofocus />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="PhoneNumber" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="PhoneNumber" class="form-control" type="number" placeholder="Phone number" autofocus />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <input type="submit" value="Modify User" id="btnSignIn" Class="btn btn-primary btn-sm" />

                </form>


                </div>
            </div>
        </div>
    </div>
</div>



