@model LoanProcessManagement.App.Models.CreateUserCommandVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Modify User";
}
<style>
    .row {
        margin-left: 5px;
        margin-right: 5px;
    }
    input[type=submit] {
        color: white;
        background-color: #343a40;
    }

    input[type=submit]:hover {
        color: white;
        background-color: #343a40;
    }
    #btnSignIn {
        margin-left: 5px;
    }
    .panel-heading {
        color: white;
        background-color: #343a40;
        border-bottom: 1px solid rgba(0,0,0,.125);
        padding: 0.75rem 1.25rem;
        position: relative;
        border-top-left-radius: 0.25rem;
        border-top-right-radius: 0.25rem;
    }
</style>

<div class="container app">
    <div class="col-sm-12 col-lg-12">
        <div data-effect="helix" id="panels" class="panel panel-info effect-helix in">
            <div class="panel-heading">
                <h3>Modify User</h3>
            </div>
            <div class="panel-body">
                <div style="border: 1px solid #343a40;padding-right:5px;padding-bottom:5px;" class="border">
                    <div class="border-part">
                        @if (ViewBag.isSuccess == true)
                        {
                            <div class="alert alert-success" role="alert">
                                @ViewBag.Message <a asp-controller="userlist" asp-action="index">Go to user list</a>
                            </div>
                        }
                        else if (ViewBag.isSuccess == false)
                        {
                            <div class="alert alert-danger" role="alert">
                                <strong>Error!</strong> @ViewBag.Message
                            </div>

                        }
                        <form action="/login/updateuser" method="post"><br />
                            @*<div asp-validation-summary="ModelOnly" class="text-danger font-italic"></div>*@
                            <div class="form-group" style="text-align:end"><label><span style="color: Red">&nbsp;All * marked fields are mandatory</span></label></div>
                            <input type="hidden" asp-for="LgId" />
                            <div class="form-group row">
                                <label asp-for="EmployeeId" class="col-sm-2 col-form-label">Employee ID<span style="color: Red">&nbsp;*</span></label>
                                <div class="col-sm-10">
                                    <input asp-for="EmployeeId" class="form-control" type="text" placeholder="Login Id" autofocus />
                                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="UserRoleId" class="col-sm-2 col-form-label">User Role ID<span style="color: Red">&nbsp;*</span></label>
                                <div class="col-sm-10">
                                    <select asp-for="UserRoleId" class="form-control" asp-items="ViewBag.roles">
                                        <option value="">Select Role</option>
                                    </select>
                                    <span asp-validation-for="UserRoleId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="BranchId" class="col-sm-2 col-form-label">Branch ID<span style="color: Red">&nbsp;*</span></label>
                                <div class="col-sm-10">
                                    <select asp-for="BranchId" class="form-control" asp-items="ViewBag.branches">
                                        <option value="">Select Branch</option>
                                    </select>
                                    <span asp-validation-for="BranchId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Name" class="col-sm-2 col-form-label">Name<span style="color: Red">&nbsp;*</span></label>
                                <div class="col-sm-10">
                                    <input asp-for="Name" class="form-control" type="text" placeholder="Name" autofocus />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Email" class="col-sm-2 col-form-label">E-Mail<span style="color: Red">&nbsp;*</span></label>
                                <div class="col-sm-10">
                                    <input asp-for="Email" class="form-control" type="email" placeholder="Email" autofocus />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="PhoneNumber" class="col-sm-2 col-form-label">Phone Number<span style="color: Red">&nbsp;*</span></label>
                                <div class="col-sm-10">
                                    <input asp-for="PhoneNumber" class="form-control" type="number" placeholder="Phone number" autofocus />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div>
                                <input type="submit" value="Modify User" id="btnSignIn" Class="btn" />
                                <a href="http://localhost:14018/home/dashboard" type="button" value="Cancel" id="btnSignIn" Class="btn btn-danger">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>