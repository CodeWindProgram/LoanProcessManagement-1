@model LoanProcessManagement.App.Models.PropertyDetailsCommandVm

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "UpdatePropertyDetailsUnFreeze";
}

<style>
    .row {
        margin-left: 5px;
        margin-right: 5px;
    }

    #btnSignIn {
        margin-left: 5px;
    }

    .div {
        display: flex;
        flex-direction: row;
        justify-content: flex-end;
        align-content: end;
        align-self: end;
    }
</style>

<div class="container app">
    <div class="col-sm-12 col-lg-12">
        <div data-effect="helix" id="panels" class="panel panel-info effect-helix in">
            <div class="panel-heading">
                Edit Property Details
            </div>
            <div class="panel-body">
                <div class="border-part">
                    @if (ViewBag.isSuccess == true)
                    {
                        <div class="alert alert-success" role="alert">
                            @ViewBag.Message @*<a asp-controller="userlist" asp-action="index">Go to user list</a>*@
                        </div>
                    }
                    else if (ViewBag.isSuccess == false)
                    {
                        <div class="alert alert-danger" role="alert">
                            <strong>Error!</strong> @ViewBag.Message
                        </div>

                    }
                    <form action="/login/UpdatePropertyDetailsUnFreeze" method="post">

                        <div class="form-group row">
                            <label asp-for="PropertyID" class="col-sm-4 col-form-label">Property Type<span style="color: red; width: 10%;">*</span></label>
                            <div class="col-sm-8">
                                <select asp-for="PropertyID" class="form-control">
                                    <option value="">Select Role</option>
                                    <option value="2">Plot</option>
                                    <option value="3">Flat</option>
                                    <option value="4">Independent House</option>
                                </select>
                                <span asp-validation-for="PropertyID" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="PropertyPincode" class="col-sm-4 col-form-label">Add Pincode of identified property<span style="color: red; width: 10%;">*</span></label>
                            <div class="col-sm-8">
                                <input asp-for="PropertyPincode" class="form-control" type="text" placeholder="" autofocus />
                                <span asp-validation-for="PropertyPincode" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <label asp-for="PropertyUnderConstruction" class="col-sm-4 col-form-label">a.Under-Construction<span style="color: red; width: 10%;">*</span></label>
                            <div class="col-sm-2">
                                <input asp-for="PropertyUnderConstruction" class="form-control" type="radio" autofocus value="Yes" id="yes" />

                                <span asp-validation-for="PropertyUnderConstruction" class="text-danger"></span>
                            </div>
                            <div class="col-sm-2">
                                <input asp-for="PropertyUnderConstruction" class="form-control" type="radio" value="No" id="No" />

                                <span asp-validation-for="PropertyUnderConstruction" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="ProjectName" class="col-sm-4 col-form-label">b.Project Name<span style="color: red; width: 10%;">*</span></label>
                            <div class="col-sm-8">
                                <input asp-for="ProjectName" class="form-control" placeholder="" autofocus />
                                <span asp-validation-for="ProjectName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="UnitName" class="col-sm-4 col-form-label">c.Unit Name<span style="color: red; width: 10%;">*</span></label>
                            <div class="col-sm-8">
                                <input asp-for="UnitName" class="form-control" type="text" placeholder="" autofocus />
                                <span asp-validation-for="UnitName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="ProjectAddress" class="col-sm-4 col-form-label">d.Project Address<span style="color: red; width: 10%;">*</span></label>
                            <div class="col-sm-8">
                                <textarea asp-for="ProjectAddress" class="form-control" placeholder="" autofocus></textarea>
                                <span asp-validation-for="ProjectAddress" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="IsSanctionedPlanReceivedID" class="col-sm-4 col-form-label">e.Does the property have a sanctioned/approved plan ?<span style="color: red; width: 10%;">*</span></label>
                            <div class="col-sm-8">
                                <select asp-for="IsSanctionedPlanReceivedID" class="form-control">
                                    <option value="">Select Role</option>
                                    <option value="1">NO- < 120 Sq.mt. (For Delhi NCR only)</option>
                                    <option value="4">NO- < 300 Sq.mt. (For Delhi NCR only)</option>
                                    <option value="5">YES</option>
                                </select>
                                <span asp-validation-for="IsSanctionedPlanReceivedID" class="text-danger"></span>
                            </div>
                        </div>

                        <div>
                            <p class="text-danger"><span class="text-danger" style="font-weight:bold;padding-left:10px;">Note: </span>Property Pincode can be entered only once, Please be guided.</p>
                        </div>
                        <div class="button">
                            <input type="submit" value="Save" id="btnSignIn" Class="btn btn-primary btn-sm" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>




