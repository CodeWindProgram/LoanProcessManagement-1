@model LoanProcessManagement.App.Models.PropertyDetailsCommandVm

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "UpdatePropertyDetails";
}
<style>
    .panel-heading {
        color: white;
        background-color: #343a40;
        border-bottom: 1px solid rgba(0,0,0,.125);
        padding: 0.75rem 1.25rem;
        position: relative;
        border-top-left-radius: 0.25rem;
        border-top-right-radius: 0.25rem;
    }
    .btn {
        background-color: #343a40;
        color: white;
        margin-bottom: 5px;
    }

        .btn:hover {
            background-color: #adb5bd;
            color: black;
            margin-bottom: 5px;
        }
    .group1 {
        padding-left: 4px;
        float: left;
    }

    .group2 {
        float: right;
        width: 65%;
        padding-right: 4px;
    }
    .row {
        margin-left: 5px;
        margin-right: 5px;
    }

    #btnSignIn {
        margin-left: 5px;
    }
    .div {
    display:flex;
    flex-direction:row;
    justify-content:flex-end;
    align-content:end;
    align-self:end;
    }
    .radio-button {
    margin-top : -20px;
    }
    .selected {
        background: #adb5bd;
        color: #FFF;
    }
</style>

<div class="container app">
    <div class="col-sm-12 col-lg-12">
        <div data-effect="helix" id="panels" class="panel panel-info effect-helix in">
            <div class="panel-heading">
                <h5>Edit Property Details</h5>
            </div>
            <div style="border-left: 1px solid #343a40; border-right: 1px solid #343a40; " class="border">
                <div class="panel-body">
                    <div class="border-part">

                        @if (ViewBag.isSuccess == true)
                        {
                            <div class="alert alert-success" role="alert">
                                @ViewBag.Message
                            </div>
                        }

                        <form action="/login/UpdatePropertyDetailsUnFreeze" method="post">
                            <br />
                            @*<div style="display:flex;">
                            <div class="col-md-4">

                            </div>
                            <div style="display:inline-flex; text-align:end;" class="col-md-5"><label><span style="color: Red">&nbsp;All * marked fields are mandatory</span></label></div>
                        </div>*@
                            <div style="text-align:end;"><label><span style="color: Red">&nbsp;All * marked fields are mandatory</span></label></div>
                            <input type="hidden" asp-for="lead_Id" />
                            <div class="form-group row">
                                <label asp-for="PropertyID" class="col-sm-4 col-form-label">Property Type<span style="color: red; width: 10%;">*</span></label>
                                <div class="col-sm-8">
                                    <select asp-for="PropertyID" class="form-control" asp-items=" ViewBag.PropertyType" autofocus readonly style="pointer-events: none;">
                                        <option value="">Selected Property Type</option>
                                    </select>
                                    <span asp-validation-for="PropertyID" class="text-danger"></span>
                                </div>
                            </div>



                            <div class="form-group row">
                                <label asp-for="PropertyPincode" class="col-sm-4 col-form-label">Add Pincode Of Identified Property<span style="color: red; width: 10%;">*</span></label>
                                <div class="col-sm-8">
                                    <input asp-for="PropertyPincode" class="form-control" type="text" placeholder="" autofocus readonly />

                                </div>
                            </div>


                            <div class="initial1" style="padding-left:1%;margin-bottom:-16px;">
                                <div class="form-group row">

                                    @*<label asp-for="PropertyUnderConstruction" class="col-sm-4 col-form-label">a.Under-Construction<span style="color: red; width: 10%;">*</span></label>
                                <div class="col-sm-2">
                                    <input asp-for="PropertyUnderConstruction" class="form-control" type="radio" style="pointer-events: none;" autofocus value="YES" id="Yes" readonly /><span class="radio-button">YES</span>
                                </div>
                                <div class="col-sm-2">
                                    <input asp-for="PropertyUnderConstruction" class="form-control" type="radio" style="pointer-events: none;" value="NO" id="No" readonly />NO
                                </div>*@


                                    <label asp-for="PropertyUnderConstruction">a.Under-Construction<span style="color: red; width: 10%;">*</span></label>
                                    <div class="form-group row" style="justify-content: center; margin-left: 16%;">
                                        <div class="" style="margin-left: 25px;">
                                            <input asp-for="PropertyUnderConstruction" type="radio" autofocus value="Yes" id="yes" readonly />
                                            Yes
                                        </div>
                                        <div class="" style="margin-left: 10px;">
                                            <input asp-for="PropertyUnderConstruction" type="radio" value="No" id="No" checked readonly />
                                            No
                                        </div>

                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="ProjectName" class="col-sm-4 col-form-label">b.Project Name<span style="color: red; width: 10%;">*</span></label>
                                <div class="col-sm-8">
                                    <input asp-for="ProjectName" class="form-control" placeholder="" autofocus readonly />

                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="UnitName" class="col-sm-4 col-form-label">c.Unit Name<span style="color: red; width: 10%;">*</span></label>
                                <div class="col-sm-8">
                                    <input asp-for="UnitName" class="form-control" type="text" placeholder="" autofocus readonly />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="ProjectAddress" class="col-sm-4 col-form-label">d.Project Address<span style="color: red; width: 10%;">*</span></label>
                                <div class="col-sm-8">
                                    <textarea asp-for="ProjectAddress" class="form-control" placeholder="" autofocus readonly></textarea>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="IsSanctionedPlanReceivedID" class="col-sm-4 col-form-label">e.Does The Property Have a Sanctioned/Approved Plan ?<span style="color: red; width: 10%;">*</span></label>
                                <div class="col-sm-8">
                                    <select asp-for="IsSanctionedPlanReceivedID" class="form-control" asp-items="ViewBag.sanctionedPlan" readonly style="pointer-events: none;">
                                        <option value="">Selected Property Sanctioned Plan</option>
                                    </select>
                                </div>
                            </div>

                            <div>
                                <p class="text-danger"><span class="text-danger" style="font-weight:bold;padding-left:10px">Note:: </span>Property Pincode can be entered only once, Please be guided.</p>
                            </div>
                            @*<div class="button">
                            <input type="submit" value="Save" id="btnSignIn" Class="btn btn-primary btn-sm" href="#" />
                        </div>*@
                        </form>
                    </div>
                </div>
            </div>
            @await Html.PartialAsync("~/Views/Shared/_Tabs.cshtml", (string)@ViewBag.lead_Id)
        </div>


        @*<div class="d-flex flex-row justify-content-around">
            <a class="btn" asp-controller="LeadList" asp-action="LeadSummary">Summary</a>
            <a class="btn" asp-controller="LeadList" asp-action="LeadModification" target="_blank">Modification</a>
            <a class="btn" asp-controller="LeadList" asp-action="LeadHistory" target="_blank">History</a>
            <a class="btn" asp-controller="ProductsList" asp-action="AllProductsList" target="_blank">Products</a>
            <a class="btn selected" asp-controller="Login" asp-action="UpdatePropertyDetails" target="_blank">Property Details</a>
        </div>*@
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {

        //var temp = true;
    if ('@TempData["UpdatePropertySuccess"]' == true) {
        toastr.success('@TempData["UpdatePropertyMessage"]', "Success");

        }
     else if ('@TempData["UpdatePropertySuccess"]' == false){
        toastr.error('@TempData["UpdatePropertyMessage"]', "Error");
     }



        });
</script>




