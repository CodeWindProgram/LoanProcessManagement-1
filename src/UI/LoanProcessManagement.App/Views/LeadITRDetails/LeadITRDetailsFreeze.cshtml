                                <hr />
                                <div>
                                    <h4><u><b>Customer Details</b></u></h4>
                                </div>
                                <div class="form-group pl-2">
                                    <div class="row">
                                        <div class="col-lg-4 col-sm-12">
                                            <label class="">Customer Name</label>
                                            <p>@Model.CustomerName</p>
                                        </div>

                                        <div class="col-lg-4 col-sm-12">
                                            <label class="">Customer Email</label>
                                            <p>@Model.CustomerEmail</p>
                                        </div>

                                        <div class="col-lg-4 col-sm-12">
                                            <label class="">Customer Mobile</label>
                                            <p>@Model.CustomerPhone</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group pl-2">
                                    <div class="row">
                                        <div class="col-lg-4 col-sm-12" id="EmployeeTypeNo">
                                            <label class="">Employee Type</label><br />
                                            @*<input type="radio" id="selfEmployee">*@
                                            <label style="font-weight:normal;" for="selfEmployee">Self-Employee</label>
                                        </div>

                                        <div class="col-lg-4 col-sm-12" id="CheckBoxNo">
                                            <label class="">Consent</label><br />
                                            @*<input type="checkbox" id="ConsentValue">*@
                                            <label style="font-weight:normal;" for="ConsentValue"> Yes </label><br>
                                        </div>
                                    </div>
                                </div>



                                <hr />
                                <div style="height: 5px;"></div>
                                <div id="IdentificationDv">
                                    <div style="height: 5px;"></div>
                                    <div id="divIdentification">
                                        <h4><u><b>ITR Details</b></u></h4>

                                    </div>

                                    <div class="form-group pl-2">
                                        <div class="row">
                                            <div class="col-lg-4 col-sm-12">
                                                <label class="">PAN</label><br />
                                                <label>@Model.PanCardNo</label>
                                            </div>

                                            <div class="col-lg-4 col-sm-12">
                                                <label class="">User Name</label>
                                                <label>@Model.UserName</label>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

