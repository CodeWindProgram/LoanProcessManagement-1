<div class="container app">
    <div class="col-sm-12 col-lg-12">
        <div data-effect="helix" id="panels" class="panel panel-info effect-helix in ">
            <div style="border: 1px solid #343a40" class="border">
                <h4>Update Category</h4>
                <div class="panel-body">
                    <div class="border-part">
                        <form id="MyForm" asp-action="AddQueryType" method="post" enctype="multipart/form-data">
                            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@<br />
                            <div style="text-align:end" class="form-group"><label><span style="color: Red">&nbsp;All * marked fields are mandatory</span></label></div>
                            <div class="form-group">
                                <div class="row pl-5">
                                    <input type="hidden" asp-for="Id" />

                                    <div class="col-lg-4 col-sm-12 ">
                                        <label asp-for="categoryName" class="control-label">Category Name<span style="color: Red">&nbsp;*</span></label>

                                        <input asp-for="categoryName" class="form-control" maxlength="50" placeholder="Enter category name" />
                                        <span asp-validation-for="categoryName" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-4 col-sm-12">

                                        <label asp-for="IsActive" class="control-label"></label><span style="color: Red">&nbsp;*</span><br />

                                        &nbsp;<input type="checkbox" asp-for="IsActive" id="myCheckbox" />

                                        <div id="checkDiv"></div>
                                    </div>


                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-1"></div>
                                    <div class="col-md-1"></div>
                                    <div class="col-md-1"></div>
                                    <div class="col-md-1"></div>
                                    <div class="col-md-1"></div>
                                    <div class="col-md-1"><input type="submit" id="submit" style="background-color: #343a40;color:white" class="btn" value="Update" /></div>
                                    <div class="col-md-2"><a onclick="loadPage()" id="btn2" type="button" value="Cancel" class="btn btn-danger">Cancel</a></div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>
