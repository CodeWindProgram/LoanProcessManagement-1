                                <div class="row pl-5">


                                    <input type="hidden" asp-for="Id" />

                                    <div class="col-lg-4 col-sm-12">
                                        <label asp-for="StateName" class="control-label">State Name <span style="color: Red">&nbsp;*</span></label>

                                        <input asp-for="StateName" class="form-control" maxlength="50" onkeydown="return /[a-z ]/i.test(event.key)"/>
                                        <span asp-validation-for="StateName" class="text-danger"></span>
                                    </div>


                                    <div class="col-lg-4 col-sm-12">

                                        <label asp-for="IsActive" class="control-label"></label><span style="color: Red">&nbsp;*</span><br />

                                        &nbsp;<input type="checkbox" asp-for="IsActive" id="myCheckbox" />

                                        <div id="checkDiv"></div>
                                    </div>

                                </div>
                            </div>

                            <div class="form-group">
                                <div class="d-flex justify-content-center">
                                    <div class="mr-2"><button type="submit" id="submit" style="background-color: #343a40;color:white" class="btn">Update</button></div>
                                    <div><a onclick="loadPage()" id="btn2" type="button" value="Cancel" class="btn btn-danger">Cancel</a></div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
