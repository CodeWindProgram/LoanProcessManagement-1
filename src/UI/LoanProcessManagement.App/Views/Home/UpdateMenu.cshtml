                                        <span asp-validation-for="getMenuByIdQueryVm.Icon" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">

                                    <div class="col-lg-4 col-sm-12">
                                        <label asp-for="getMenuByIdQueryVm.Position" class="control-label">Position<span style="color: Red">&nbsp;*</span></label>

                                        <input asp-for="getMenuByIdQueryVm.Position" class="form-control" maxlength="200" />
                                        <span asp-validation-for="getMenuByIdQueryVm.Position" class="text-danger"></span>
                                    </div>





                                    <div class="col-lg-4 col-sm-12">
                                        <label id="txtlab">Menu Is Being Updated For<span style="color: Red">&nbsp;*</span> </label>


                                        <div id="checkings">
                                            @for (int i = 0; i < Model.RoleList.Count(); i++)
                                            {
                                                <div class="">
                                                    <tr id="lblcheck">
                                                        <td><input asp-for="@Model.RoleList[i].Id" hidden /></td>
                                                        <td><input asp-for="@Model.RoleList[i].Checkbox" id="inpcheck" type="checkbox" />&nbsp;@Model.RoleList[i].Name</td>
                                                    </tr>
                                                </div>
                                            }
                                        </div>
                                    </div>

                                    <div class="col-lg-4 col-sm-12">
                                        <label>Is Parent Menu?<span style="color: Red">&nbsp;*</span></label><br />

                                        <input hidden id="confirming" asp-for="getMenuByIdQueryVm.IsParent" />
                                        <input type="radio" name="Married" id="Yes" value="Yes" onclick="hideStudentChildren()" required>
                                        <label class="font-weight-normal" for="Yes"><span>Yes</span></label>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                                        <input type="radio" name="Married" id="No" value="No" onclick="hideStudentChildren()" checked>
                                        <label class="font-weight-normal" for="No"><span>No</span></label>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                                    </div>

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4 col-sm-12">
                                        <label>Sub Menus</label>
                                        <select multiple="multiple" asp-for="Parlist" asp-items="@ViewBag.ParentId" id="selectChildren" class="required" disabled required>
                                        </select>
                                        <div><b>To Select Multiple Options Press <i>'Ctrl + Select'</i></b></div>
                                    </div>
                                </div>
                            </div>

                            <div hidden class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="getMenuByIdQueryVm.IsActive" /> @Html.DisplayNameFor(model => model.getMenuByIdQueryVm.IsActive)
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-4"></div>
                                    <div class="col-md-4">
                                        <button type="submit" style="background-color: #343a40;color:white" class="btn">Submit</button>
                                        <a asp-action="Menulist" id="btn2" type="button" value="Cancel" class="btn btn-danger">Cancel</a>
                                    
                                        @{
                                            if (status)

                                            {

                                                @*<a href="" onclick="myfun()" class="btn btn-danger col-md-6 col-sm-5">Disable Status</a>*@
                                            }
                                            else
                                            {
                                                <a href="" onclick="myfun()" class="btn btn-success col-md-6 col-sm-5">Enable Status</a>
                                            }
                                        }

                                    </div>
                                    <div class="col-md-4"></div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

