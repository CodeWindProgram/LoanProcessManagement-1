<script>
    function hideStudentChildren() {
        if ($("#Yes").is(":checked")) {
            check();

            $("#selectChildren").removeAttr("disabled");
            var temp = '@TempData["temp"]';
            var temp = temp.trim();
            var splitTemp = temp.split(" ");
            var parentList = [];
            for (var i = 0; i < splitTemp.length; i++) {
                parentList.push(parseInt(splitTemp[i]));
            }
            $("#selectChildren").val(parentList);





        }
        if ($("#No").is(":checked")) {
            uncheck();
            $("#selectChildren").attr("disabled", "disabled");
        }
    }


    function check() {
        document.getElementById("confirming").checked = true;
    }

    function uncheck() {
        document.getElementById("confirming").checked = false;
    }

    function myfun() {

        var temp = '@TempData["MenuId"]';
        console.log(temp);
        $.ajax({
            type: "POST",
            url: "/Home/AlterStatusMenuList",
            data: { "Id": temp },
            async:false,
            success: function (data) {
                console.log(data);

                if (data.isSuccess == true)
                {
                    toastr.success(data.message, "Success");
                }
                else if (data.isSuccess == false)
                {
                     toastr.error(data.message, "Error");
                }
                window.location.href = '/MenuUpdate/' +temp;
            }
        });
    }
    $(document).ready(function () {

        var temp = '@TempData["temp"]';
        var temp = temp.trim();
        var splitTemp = [];
        if (temp != "") {
            splitTemp = temp.split(" ");
        }

        if (splitTemp.length != 0) {

            check();
            $("input:radio[name=Married]").attr("checked", true);
            $("#selectChildren").removeAttr("disabled");
            var parentList = [];
            for (var i = 0; i < splitTemp.length; i++) {
                parentList.push(parseInt(splitTemp[i]));
            }
            $("#selectChildren").val(parentList);


        }
        console.log(splitTemp);
        console.log(splitTemp.length);

        if ('@TempData["ApiDataIsSuccess"]' == 'True') {
