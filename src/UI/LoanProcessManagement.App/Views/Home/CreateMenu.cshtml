@model LoanProcessManagement.App.Models.CheckboxfunctionVm
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "CreateMenu";
}
<style>
    #act1 {
        color: white;
    }
    /*
        #act1:hover {
            color: black;
        }*/
</style>
<div class="container app">
    <div class="col-sm-12 col-lg-12">
        <div data-effect="helix" id="panels" class="panel panel-info effect-helix in ">
            <div style="border: 1px solid #343a40" class="border">
                <div class="panel-heading">
                    <h5>Create Menu</h5>
                </div>
                <div class="panel-body">
                    <div class="border-part">
                        <form asp-action="CreateMenu" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div><br />
                            <div style="text-align:end" class="form-group"><label><span style="color: Red">&nbsp;All * marked fields are mandatory</span></label></div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-1"></div>
                                    <div class="col-md-3">
                                        <label asp-for="createMenuCommand.MenuName" class="control-label">Menu Name<span style="color: Red">&nbsp;*</span></label>
                                    </div>
                                    <div class="col-md-6">
                                        <input asp-for="createMenuCommand.MenuName" class="form-control" maxlength="50" />
                                        <span asp-validation-for="createMenuCommand.MenuName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-1"></div>
                                    <div class="col-md-3">
                                        <label asp-for="createMenuCommand.Link" class="control-label">Link<span style="color: Red">&nbsp;*</span></label>
                                    </div>
                                    <div class="col-md-6">
                                        <input asp-for="createMenuCommand.Link" class="form-control" maxlength="200" />
                                        <span asp-validation-for="createMenuCommand.Link" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-1"></div>
                                    <div class="col-md-3">
                                        <label asp-for="createMenuCommand.Icon" class="control-label">Icon<span style="color: Red">&nbsp;*</span></label>
                                    </div>
                                    <div class="col-md-6">
                                        <input asp-for="createMenuCommand.Icon" class="form-control" maxlength="200" />
                                        <span asp-validation-for="createMenuCommand.Icon" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-1"></div>
                                    <div class="col-md-3">
                                        <label asp-for="createMenuCommand.Position" class="control-label">Position<span style="color: Red">&nbsp;*</span></label>
                                    </div>
                                    <div class="col-md-6">
                                        <input asp-for="createMenuCommand.Position" class="form-control" maxlength="50" />
                                        <span asp-validation-for="createMenuCommand.Position" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div hidden class="form-group">
                                <div class="row">
                                    <div class="col-md-1"></div>
                                    <div class="col-md-3">
                                        <label asp-for="createMenuCommand.CreatedDate" class="control-label">Created Date<span style="color: Red">&nbsp;*</span></label>
                                    </div>
                                    <div class="col-md-6">
                                        <input asp-for="createMenuCommand.CreatedDate" class="form-control" maxlength="50" />
                                        <span asp-validation-for="createMenuCommand.CreatedDate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-1"></div>
                                    <div class="col-md-3">
                                        <label>Parent Id<span style="color: Red">&nbsp;*</span></label>
                                    </div>
                                    <div class="col-md-6">
                                        <input hidden id="confirming" asp-for="createMenuCommand.IsParent" />
                                        <input type="radio" name="Married" id="Yes" value="Yes" onclick="hideStudentChildren()" required>YES &nbsp&nbsp&nbsp&nbsp
                                        <input type="radio" name="Married" id="No" value="No" onclick="hideStudentChildren()" checked>NO &nbsp&nbsp&nbsp&nbsp

                                        <select multiple="multiple" asp-for="Childlist" asp-items="@ViewBag.ParentId" id="selectChildren" class="required" disabled required>
                                        </select>
                                        <div><b>To Select Multiple Options Press <i>'Ctrl + Select'</i></b></div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group" id="checkboxes">
                                <div class="row">
                                    <div class="col-md-1"></div>
                                    <div class="col-md-3">
                                        <label id="txtlab">Menu Is Being Created For<span style="color: Red">&nbsp;*</span> </label>
                                    </div>

                                    <div class="col-md-6" id="checkings">
                                        @for (int i = 0; i < Model.ListVms.Count(); i++)
                                        {
                                            <div class="">
                                                <tr id="lblcheck">
                                                    <td><input asp-for="@Model.ListVms[i].Id" hidden /></td>
                                                    <td><input asp-for="@Model.ListVms[i].Checkbox" id="inpcheck" type="checkbox" />@Model.ListVms[i].Name</td>
                                                </tr>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div hidden class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="createMenuCommand.IsActive" checked /> @Html.DisplayNameFor(model => model.createMenuCommand.IsActive)
                                    </label>
                                </div>
                            </div>
                            <div class="form-group justify-content-center">
                                <div class="row">
                                    <div class="col-md-2"></div>
                                    <div class="col-md-2"></div>
                                    <div class="col-md-2"><button type="submit" style="background-color: #343a40;color:white" class="btn">Create</button></div>
                                    <div class="col-md-2"><a asp-action="Menulist" id="btn2" type="button" value="Cancel" class="btn btn-danger">Cancel</a></div>
                                    <div class="col-md-2"></div>
                                    <div class="col-md-2"></div>


                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function hideStudentChildren() {
        if ($("#Yes").is(":checked")) {
            check();
            $("#selectChildren").removeAttr("disabled");
        }
        if ($("#No").is(":checked")) {
            uncheck();
            $("#selectChildren").attr("disabled", "disabled");
        }
    }


    function check() {
        document.getElementById("confirming").checked = true;
    }

    function uncheck() {
        document.getElementById("confirming").checked = false;
    }
</script>