@model IEnumerable<LoanProcessManagement.App.Models.IncomeAssessmentRecordsListVM>

<div>
<table class="display table table-responsive-lg">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.EmployerName1)
                </th>
                <th>
