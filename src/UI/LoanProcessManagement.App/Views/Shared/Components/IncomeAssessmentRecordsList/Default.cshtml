                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployerName5)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.FileType)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.Institution_Id)*@
                        @if(item.Institution_Id == 0){
                        <span> </span>
                        }
                        @if(item.Institution_Id == 1){
                        <span>AU Small Finance Bank</span>
                        }
                        @if(item.Institution_Id == 2){
                        <span>Acme Bank Ltd</span>
                        }
                        @if(item.Institution_Id == 3){
                        <span>Adarsh Bank</span>
                        }
                        @if(item.Institution_Id == 4){
                        <span>Ahmedabad District Co-Op</span>
                        }
                        @if(item.Institution_Id == 5){
                        <span>Airtel Payments Bank</span>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DocumentType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                </tr>
            }
        </tbody>
</table>
</div>
