                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Institution_Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DocumentType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @{var date = item.CreatedDate.ToString().Split(" ");}
                        @date[0]
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.EmployerName1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployerName2)
