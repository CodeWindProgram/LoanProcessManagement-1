@model string
<div class="d-flex flex-row">
    <a class="btn" asp-controller="leadlist" asp-action="LeadSummary" asp-route-lead_Id="@Model">Summary</a>&nbsp;&nbsp;
    <a class="btn" asp-controller="leadlist" asp-action="LeadModification" asp-route-lead_Id="@Model">Modification</a>&nbsp;&nbsp;
    <a class="btn" asp-controller="leadlist" asp-action="LeadHistory" asp-route-LeadId="@Model">History</a>&nbsp;&nbsp;
    <a class="btn" asp-controller="ProductsList" asp-action="AllProductsList" asp-route-lead_Id="@Model">Products</a>&nbsp;&nbsp;
    <a class="btn" asp-controller="Login" asp-action="UpdatePropertyDetails" asp-route-lead_Id="@Model">Property Details</a>
</div>

<script>
    $(document).ready(function () {
        $('.btn1').click(function (e) {
            $('.btn1').removeClass("selected");
            $(e.target).addClass("selected");
        });
    });

</script>