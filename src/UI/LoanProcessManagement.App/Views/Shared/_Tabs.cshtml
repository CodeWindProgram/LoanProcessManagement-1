@model string
<div class="d-flex flex-row pt-4 pb-4">
    <a class="btn btn-default-submit" asp-controller="leadlist" id="anch_summary" asp-action="LeadSummary" asp-route-lead_Id="@Model">Summary</a>&nbsp;&nbsp;
    <a class="btn btn-default-submit" asp-controller="leadlist" id="anch_modification" asp-action="LeadModification" asp-route-lead_Id="@Model">Modification</a>&nbsp;&nbsp;
    <a class="btn btn-default-submit" asp-controller="leadlist" id="anch_history" asp-action="LeadHistory" asp-route-LeadId="@Model">History</a>&nbsp;&nbsp;
    <a class="btn btn-default-submit" asp-controller="ProductsList" id="anch_products" asp-action="AllProductsList" asp-route-lead_Id="@Model">Products</a>&nbsp;&nbsp;
    <a class="btn btn-default-submit" asp-controller="Login" id="anch_propertyDetails" asp-action="UpdatePropertyDetails" asp-route-lead_Id="@Model">Property Details</a>&nbsp;&nbsp;
    <a class="btn btn-default-submit" asp-controller="QueryHistory" id="anch_queryHistory" asp-action="Index" asp-route-lead_Id="@Model">Query History</a>&nbsp;&nbsp;
    <a class="btn btn-default-submit" asp-controller="Agency" id="ThirdPartyCheck" asp-action="Index" asp-route-lead_Id="@Model" style="display:none;">Third Party Check</a>&nbsp;&nbsp;
</div>

<script>
    $(document).ready(function () {        var URL = window.location.href;        console.log(URL);        $('.btn').removeClass("selected");        $('.btn').removeClass("btn-secondary");        if (URL.includes('LeadSummary')) {            $('#anch_summary').removeClass("selected");            $('#anch_summary').removeClass("btn-default-submit");            $('#anch_summary').addClass("btn-secondary");        }        else if (URL.includes('Modification')) {            $('#anch_modification').removeClass("btn-default-submit");            $('#anch_modification').addClass("btn-secondary");        }        else if (URL.includes('LeadHistory')) {            $('#anch_history').removeClass("btn-default-submit");            $('#anch_history').addClass("btn-secondary");        }        else if (URL.includes('AllProductsList')) {            console.log("123");            $('#anch_products').removeClass("btn-default-submit");            $('#anch_products').addClass("btn-secondary");        }        else if (URL.includes('UpdatePropertyDetails')) {            $('#anch_propertyDetails').removeClass("btn-default-submit");            $('#anch_propertyDetails').addClass("btn-secondary");        }        else if (URL.includes('Query')) {            console.log("456");            $('#anch_queryHistory').removeClass("btn-default-submit");            $('#anch_queryHistory').addClass("btn-secondary");        }        else if (URL.includes('Third')) {            $('#ThirdPartyCheck').removeClass("btn-default-submit");            $('#ThirdPartyCheck').addClass("btn-secondary");        }        //$('.btn').click(function (e) {        //    console.log("11");        //    $('.btn').removeClass("selected");        //    $(e.target).addClass("selected");        //});    });

</script>