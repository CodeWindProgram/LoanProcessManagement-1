@model LoanProcessManagement.App.Models.CreateUserCommandVM
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Register Page";
}

<style>
    .form-group{
        display:flex;
    }
    label {
        display: inline-block;
        margin-bottom: 5px;
        font-weight: bold;
        width: 15%;
    }

    .form-signin-heading{
        color:white;
        background-color:darkblue;
        padding:5px;
        margin-bottom:18px;

    }
    

</style>



<div class="container">
    <div class="form-signin well well-lg">
        <h2 class="form-signin-heading text-center">Add User</h2>
        @if (ViewBag.isSuccess == true)
        {
            <div class="alert alert-success" role="alert">
                <strong>Well done!</strong> @ViewBag.Message
            </div>
        }
        else if(ViewBag.isSuccess == false)
        {
            <div class="alert alert-danger" role="alert">
                <strong>Error!</strong> @ViewBag.Message
            </div>

        }
    <form asp-action="Index" method="post">
        @*<div asp-validation-summary="ModelOnly" class="text-danger font-italic"></div>*@
        <div class="form-group">
            <label asp-for="EmployeeId" class="control-label"></label>
            <input asp-for="EmployeeId" class="form-control" id="txtEmpId" type="text" placeholder="Login Id" autofocus />
            <span asp-validation-for="EmployeeId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UserRoleId" class="control-label"></label>
            <select asp-for="UserRoleId" class="form-control" asp-items="ViewBag.roles">
                <option value="">Select Role</option>
            </select>
            <span asp-validation-for="UserRoleId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BranchId" class="control-label"></label>
            <select asp-for="BranchId" class="form-control" asp-items="ViewBag.branches">
                <option value="">Select Branch</option>
            </select>
            <span asp-validation-for="BranchId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" id="txtName" type="text" placeholder="Name" autofocus />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" id="txtEmail" type="email" placeholder="Email" autofocus />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label"></label>
            <input asp-for="PhoneNumber" class="form-control" id="txtPhonenNumber" type="number" placeholder="Phone No" autofocus />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <input type="submit" value="Add User" id="btnSignIn" Class="btn btn-primary" />

    </form>
    </div>
</div>
