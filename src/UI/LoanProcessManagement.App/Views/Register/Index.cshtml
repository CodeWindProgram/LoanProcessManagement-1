<div class="container app">
    <div class="col-sm-12 col-lg-12">
        <div data-effect="helix" id="panels" class="panel panel-info effect-helix in">
            <div style="padding-right:5px;padding-bottom:5px;">
                <div class="panel-heading">
                    <h5>Add User</h5>
                </div>
                <div class="panel-body">
                    <div class="border-part">
                        <form asp-action="Index" method="post">
                            <div style="text-align:end" class="form-group"><label><span style="color: Red">&nbsp;All * marked fields are mandatory</span></label></div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4 col-sm-12">
                                        <label asp-for="EmployeeId">Username <span style="color: Red">&nbsp;*</span></label>

                                        <input asp-for="EmployeeId" class="form-control" type="text" placeholder="Username" autofocus />
                                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-4 col-sm-12">
                                        <label asp-for="UserRoleId">User Role <span style="color: Red">&nbsp;*</span></label>

                                        <select asp-for="UserRoleId" class="form-control" asp-items="ViewBag.roles">
                                            <option value="">Select Role</option>
                                        </select>
                                        <span asp-validation-for="UserRoleId" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-4 col-sm-12">
                                        <label asp-for="BranchId">Branch Name <span style="color: Red">&nbsp;*</span></label>

                                        <select asp-for="BranchId" class="form-control" asp-items="ViewBag.branches">
                                            <option value="">Select Branch</option>
                                        </select>
                                        <span asp-validation-for="BranchId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group ">
                                <div class="row">
                                    <div class="col-lg-4 col-sm-12">
                                        <label asp-for="Name">Name <span style="color: Red">&nbsp;*</span></label>

                                        <input asp-for="Name" class="form-control" type="text" onkeydown="return /[a-z_ ]/i.test(event.key)" placeholder="Name" autofocus />
                                        <span asp-validation-for="Name" class="text-danger"></span>

                                    </div>

                                    <div class="col-lg-4 col-sm-12">
                                        <label asp-for="Email">Email Id<span style="color: Red">&nbsp;*</span></label>

                                        <input asp-for="Email" class="form-control" type="email" placeholder="Email Id" autofocus />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-4 col-sm-12">
                                        <label asp-for="PhoneNumber">Phone Number <span style="color: Red">&nbsp;*</span></label>

                                        <input asp-for="PhoneNumber" class="form-control noTxtInput" placeholder="Phone number" autofocus maxlength="10" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group ml-lg-2">
                                <div"" class="row">
                                    <div class="col-sm-5"></div>
                                    <div class="col-sm-5">
                                        <input type="submit" value="Create User" id="btnSignIn" Class="btn btn-dark" />
                                        <a id="cancelbutton" class="btn btn-danger" href="/UserList/Index">Cancel</a>
                                    </div>
                                </div"">
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

